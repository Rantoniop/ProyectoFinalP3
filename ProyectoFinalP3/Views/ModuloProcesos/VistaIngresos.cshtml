@model ProyectoFinalP3.Models.Ingresos


@using ProyectoFinalP3.Models

@{
    ViewBag.Title = "AgregarCita";
}

<html>
<head>
    <title>Agregar Cita</title>

    <meta charset="utf-8" />

    <style>
        .panel {
            margin-top: 35px;
        }
    </style>
</head>
<body>
    <div>
        <div></div>
        <div>
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4 class="panel-title text-center">Módulo Procesos</h4>
                </div>
                <div class="panel-body">
                    @Html.ActionLink("Volver atras", "Index")
                    <h2 class="text-center title">Ingresos a Internamiento</h2>
                    <div class="form-group">
                        @Html.ActionLink("Ingresar Paciente", "IngresoPaciente", "ModuloProcesos", new { @class = "btn btn-primary" })
                    </div>
                    <div class="form-group">
                        <table class="table table-bordered table-striped">
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Id)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Fecha)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.HabitacionesId)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.PacientesId)
                                </th>
                                <th></th>
                            </tr>

                            @foreach (Ingresos ingresos in ViewBag.Ingresos)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => ingresos.Id)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => ingresos.Fecha)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => ingresos.HabitacionesId)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => ingresos.PacientesId)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Editar", "EditarIngreso", new { id = ingresos.Id }) |
                                        @Html.ActionLink("Borrar", "BorrarIngreso", new { id = ingresos.Id })
                                    </td>
                                </tr>
                            }

                        </table>
                    </div>

                </div>
            </div>
        </div>


        <div></div>
    </div>
</body>
</html>