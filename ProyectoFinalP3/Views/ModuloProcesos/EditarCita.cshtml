@model ProyectoFinalP3.Models.Citas

@{
    ViewBag.Title = "_EditarCita";
    List<SelectListItem> itemsP = (List<SelectListItem>)ViewBag.itemsP;
    List<SelectListItem> itemsM = (List<SelectListItem>)ViewBag.itemsM;
}

<html>
<head>
    <title>Agregar Cita</title>
    <style>
        .panel {
            margin-top: 35px;
            max-width: 300px;
        }
    </style>
</head>
<body>
    <div>
        <div></div>
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4 class="panel-title text-center">Editar Cita</h4>
            </div>
            <div class="panel-body">
                <div>
                    @using (Html.BeginForm("EditarCita", "ModuloProcesos", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        <div class="form-group">
                            @Html.Label("Paciente")
                            @Html.DropDownListFor(a => a.PacientesId, itemsP, "Selecciona el Nombre / Cedula", new { @class = "form-control" })
                            @Html.ValidationMessageFor(a => a.PacientesId, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            @Html.Label("Medico")
                            @Html.DropDownListFor(a => a.MedicosId, itemsM, "Selecciona el Nombre / Cedula", new { @class = "form-control" })
                            @Html.ValidationMessageFor(a => a.MedicosId, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            @Html.Label("Fecha de Cita")<br />
                            @Html.EditorFor(a => a.Fecha, new { @class = "form-control" })
                            @Html.ValidationMessageFor(a => a.Fecha, "", new { @class = "text-danger" })
                        </div>
                        <div>
                            <input type="submit" value="Editar" class="btn btn-primary" />
                        </div>
                    }


                </div>
            </div>
        </div>

        
    <div></div>
    </div>
</body>
</html>

